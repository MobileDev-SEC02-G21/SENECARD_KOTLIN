<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/custom_dialog_rounded_background"

    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="30dp"
    android:paddingBottom="30dp">

    <ImageView
        android:id="@+id/dialog_icon"
        android:contentDescription="@string/custom_dialog_icon"
        android:src="@drawable/custom_dialog_icon_info"
        android:layout_gravity="center"

        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="15dp"/>

    <TextView
        android:id="@+id/dialog_type"
        android:fontFamily="@font/montserratmedium"
        android:text="@string/custom_dialog_type"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_gravity="center"
        android:gravity="center"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/dialog_message"
        android:fontFamily="@font/montserratmedium"
        android:text="@string/custom_dialog_message"
        android:textColor="@color/gray_text"
        android:textSize="18sp"
        android:layout_gravity="center"
        android:gravity="center"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/dialog_button"
        android:background="@drawable/custom_dialog_button_background"
        android:text="@string/custom_dialog_accept"
        android:fontFamily="@font/montserratsemibold"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20sp"

        android:layout_width="230dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"/>
</LinearLayout>