<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/custom_dialog_rounded_background"
    tools:context=".CustomDialog"

    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="30dp"
    android:paddingBottom="30dp">

    <ImageView
        android:id="@+id/dialog_icon"
        android:contentDescription="@string/custom_dialog_icon"
        android:src="@mipmap/icon_custom_dialog_info"
        android:layout_gravity="center"

        android:layout_width="80dp"
        android:layout_height="80dp"
        tools:ignore="ImageContrastCheck" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/loading_animation"
        android:visibility="gone"
        app:lottie_rawRes="@raw/loading"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"

        android:layout_gravity="center"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <TextView
        android:id="@+id/dialog_type"
        android:fontFamily="@font/sen_bold"
        android:text="@string/custom_dialog_type"
        android:textColor="@color/primary"
        android:textSize="16sp"
        android:layout_gravity="center"
        android:gravity="center"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/dialog_message"
        android:fontFamily="@font/sen_regular"
        android:text="@string/custom_dialog_message"
        android:textColor="@color/text"
        android:textSize="16sp"
        android:layout_gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:gravity="center"

        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/dialog_button"
        android:background="@drawable/custom_dialog_button_background"
        android:text="@string/custom_dialog_accept"
        android:fontFamily="@font/sen_bold"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"

        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_width="230dp"
        android:layout_height="50dp"
        tools:ignore="TextContrastCheck" />
</LinearLayout>