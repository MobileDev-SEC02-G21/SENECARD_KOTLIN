<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/white"
    tools:context=".ActivityInitial"

    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/myImageView"
            android:src="@drawable/icon_senecard"
            android:contentDescription="@string/icon_senecard"

            android:layout_gravity="center"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_marginTop="120dp"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:text="@string/app_name"
            android:fontFamily="@font/sen_extrabold"
            android:textColor="@color/primary"
            android:textSize="26sp"

            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="100dp"/>

        <TextView
            android:text="@string/know_more_stores_with_us"
            android:fontFamily="@font/sen_regular"
            android:textColor="@color/text"
            android:textSize="22sp"

            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="100dp" />

        <Button
            android:id="@+id/auth_auxiliary_button_enter"
            android:text="@string/sing_in"
            android:fontFamily="@font/sen_bold"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:background="@drawable/auth_auxiliary_button_background"

            android:layout_gravity="center"
            android:layout_width="320dp"
            android:layout_height="70dp"
            android:layout_marginBottom="25dp"/>

        <Button
            android:id="@+id/auth_auxiliary_button_register"
            android:text="@string/sign_up"
            android:fontFamily="@font/sen_bold"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:background="@drawable/auth_auxiliary_button_background"

            android:layout_gravity="center"
            android:layout_width="320dp"
            android:layout_height="70dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

