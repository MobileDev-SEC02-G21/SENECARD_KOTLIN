<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@drawable/auth_background"
    tools:context=".ActivityAuth"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="@string/app_name"
        android:fontFamily="@font/questrial"
        android:textColor="@color/white"
        android:textSize="45sp"

        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/auth_auxiliary_button_enter"
        android:text="@string/auth_enter"
        android:fontFamily="@font/montserratsemibold"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:background="@drawable/auth_auxiliary_button_background"

        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"/>

    <Button
        android:id="@+id/auth_auxiliary_button_register"
        android:text="@string/auth_register"
        android:fontFamily="@font/montserratsemibold"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:background="@drawable/auth_auxiliary_button_background"

        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"/>

</LinearLayout>