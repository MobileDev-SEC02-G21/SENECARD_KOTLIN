<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/backButtonFailure"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/arrow_back"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="16dp"
        app:tint="@android:color/black" />

    <!-- Title -->
    <TextView
        android:id="@+id/failureTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="DECLINED TRANSACTION."
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@color/primary"
        android:padding="16dp"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/backButtonFailure"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Customer Name -->
    <TextView
        android:id="@+id/customerNameFailure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CUSTOMER NAME"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/failureTitle"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/customerNameInputFailure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Javier Rivas"
        android:background="@drawable/custom_dialog_rounded_background"
        android:padding="16dp"
        android:inputType="none"
        app:layout_constraintTop_toBottomOf="@id/customerNameFailure"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Email -->
    <TextView
        android:id="@+id/customerEmailFailure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EMAIL"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/customerNameInputFailure"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp" />

    <EditText
        android:id="@+id/customerEmailInputFailure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="helloa@halallab.co"
        android:background="@drawable/custom_dialog_rounded_background"
        android:padding="16dp"
        android:inputType="none"
        app:layout_constraintTop_toBottomOf="@id/customerEmailFailure"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Purchase -->
    <TextView
        android:id="@+id/purchaseDetailsFailure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PURCHASE"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/customerEmailInputFailure"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp" />

    <EditText
        android:id="@+id/purchaseInputFailure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Burrito: 1 meat"
        android:background="@drawable/custom_dialog_rounded_background"
        android:padding="16dp"
        android:inputType="none"
        app:layout_constraintTop_toBottomOf="@id/purchaseDetailsFailure"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Logo -->
    <ImageView
        android:id="@+id/logoFailure"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:scaleType="centerInside"
        android:src="@drawable/senecardlogo"
        app:layout_constraintTop_toBottomOf="@id/purchaseInputFailure"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <!-- Try Again Button -->
    <Button
        android:id="@+id/tryAgainButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TRY AGAIN"
        android:textStyle="bold"
        android:padding="16dp"
        android:textSize="14sp"
        android:background="@drawable/custom_dialog_button_background"
        android:textColor="@android:color/white"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/logoFailure"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Return to Main Button -->
    <Button
        android:id="@+id/returnToMainFailure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RETURN TO MAIN PAGE"
        android:textStyle="bold"
        android:padding="16dp"
        android:textSize="14sp"
        android:background="@drawable/custom_dialog_button_background"
        android:textColor="@android:color/white"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tryAgainButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
