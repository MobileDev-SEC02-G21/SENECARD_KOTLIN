<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/backButtonSuccess"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/arrow_back"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="16dp"
        app:tint="@android:color/black" />

    <!-- Title -->
    <TextView
        android:id="@+id/successTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="SUCCESSFUL TRANSACTION."
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@color/primary"
        android:padding="16dp"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/backButtonSuccess"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Customer Name -->
    <TextView
        android:id="@+id/customerName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CUSTOMER NAME"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/successTitle"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/customerNameInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Javier Rivas"
        android:background="@drawable/custom_dialog_rounded_background"
        android:padding="16dp"
        android:inputType="none"
        app:layout_constraintTop_toBottomOf="@id/customerName"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Email -->
    <TextView
        android:id="@+id/customerEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EMAIL"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/customerNameInput"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp" />

    <EditText
        android:id="@+id/customerEmailInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="helloa@halallab.co"
        android:background="@drawable/custom_dialog_rounded_background"
        android:padding="16dp"
        android:inputType="none"
        app:layout_constraintTop_toBottomOf="@id/customerEmail"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Purchase -->
    <TextView
        android:id="@+id/purchaseDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PURCHASE"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/customerEmailInput"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp" />

    <EditText
        android:id="@+id/purchaseInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Burrito: 1 meat"
        android:background="@drawable/custom_dialog_rounded_background"
        android:padding="16dp"
        android:inputType="none"
        app:layout_constraintTop_toBottomOf="@id/purchaseDetails"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Logo -->
    <ImageView
        android:id="@+id/logoSuccess"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:scaleType="centerInside"
        android:src="@drawable/senecardlogo"
        app:layout_constraintTop_toBottomOf="@id/purchaseInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />


    <!-- Return to Main Button -->
    <Button
        android:id="@+id/returnToMainSuccess"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RETURN TO MAIN PAGE"
        android:textStyle="bold"
        android:padding="16dp"
        android:textSize="14sp"
        android:background="@drawable/custom_dialog_button_background"
        android:textColor="@android:color/white"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/logoSuccess"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
